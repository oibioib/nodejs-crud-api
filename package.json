{
  "name": "nodejs-crud-api",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "start:prod": "npm run build && node ./dist/index.js",
    "start:dev": "tsnd -r tsconfig-paths/register ./src/index.ts",
    "start:multi": "cross-env CLUSTER=multi tsnd -r tsconfig-paths/register ./src/index.ts",
    "lint": "eslint ./src --ext .ts,.tsx --ignore-path ./.gitignore --max-warnings=0 --fix",
    "lint:format": "prettier  --loglevel warn --write \"./**/*.(ts|tsx|scss|css|json|md)\" --ignore-path ./.gitignore",
    "lint:check": "npm run lint && prettier --check . --ignore-path ./.gitignore",
    "build": "webpack",
    "test": "jest --silent --runInBand"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oibioib/nodejs-crud-api.git"
  },
  "author": "Pavel Bodal",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/oibioib/nodejs-crud-api/issues"
  },
  "homepage": "https://github.com/oibioib/nodejs-crud-api#readme",
  "dependencies": {
    "dotenv": "^16.3.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.2",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsconfig-paths-webpack-plugin": "^4.0.1",
    "typescript": "5.0.4",
    "webpack": "^5.88.1",
    "webpack-cli": "^5.1.4"
  }
}
